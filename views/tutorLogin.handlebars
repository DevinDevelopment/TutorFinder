<div class="row mt-5">
  <div class="col-md-6 offset-md-3 text-center">
    <h3>Tutor Login</h2>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
    <h3 class="login mb-5">Login</h3>

    <form class="form tutor-login-form">
  <div class="form-group row">
    <label for="email-login" class="col-sm-3 col-form-label">Email:</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" id="tutor-email-login" />
    </div>
  </div>
  <div class="form-group row">
    <label for="password-login" class="col-sm-3 col-form-label">Password:</label>
    <div class="col-sm-9">
      <input class="form-control" type="password" id="tutor-password-login" />
    </div>
  </div>
  <div class="form-group">
    <button class="btn btn-primary mt-3" type="submit">Login</button>
  </div>
</form>

  </div>
  <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
    <h3 class="signup mb-5">Signup</h3>

    <form class="form tutor-signup-form" enctype="multipart/form-data">
      <div class="form-group row">
        <label for="name-signup" class="col-sm-3 col-form-label">Name:</label>
        <div class="col-sm-9">
          <input class="form-control" type="text" id="tutor-name-signup" />
        </div>
      </div>
      <div class="form-group row">
        <label for="email-signup" class="col-sm-3 col-form-label">Email:</label>
        <div class="col-sm-9">
          <input class="form-control" type="text" id="tutor-email-signup" />
        </div>
      </div>
      <div class="form-group row">
        <label for="password-signup" class="col-sm-3 col-form-label">Password:</label>
        <div class="col-sm-9">
          <input class="form-control" type="password" id="tutor-password-signup" />
        </div>
      </div>
      <div class="form-group row">
    <label for="profile-picture" class="col-sm-3 col-form-label">Profile Picture:</label>
    <div class="col-sm-9">
      <input class="form-control" type="file" id="profile-picture" name="profilePicture" accept="image/*" />
    </div>
  </div>
      <div class="form-group">
        <button class="btn btn-primary mt-3" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/tutorLogin.js"></script>