<div class="row">
  <div class="col-md-6">
    <h1>Hello Student:</h1>
    <br>
    <h2>Login</h2>

    <form class="form student-login-form">
      <div class="form-group">
        <label for="student-email-login">email:</label>
        <input class="form-input" type="text" id="student-email-login" />
      </div>
      <div class="form-group">
        <label for="student-password-login">password:</label>
        <input class="form-input" type="password" id="student-password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form student-signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="student-name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="student-email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="student-password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/studentLogin.js"></script>